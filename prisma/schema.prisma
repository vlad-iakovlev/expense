datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["extendedWhereUnique"]
}

model Migration {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
}

model Transaction {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  completedAt DateTime?

  userGroups   UserGroup[] @relation(fields: [userGroupIds], references: [id])
  userGroupIds String[]    @db.ObjectId

  groups   Group[]  @relation(fields: [groupIds], references: [id])
  groupIds String[] @db.ObjectId

  wallets   Wallet[] @relation(fields: [walletIds], references: [id])
  walletIds String[] @db.ObjectId

  operations   Operation[] @relation(fields: [operationIds], references: [id])
  operationIds String[]    @db.ObjectId
}

model Account {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId

  @@unique([provider, providerAccountId])
}

model Session {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  sessionToken String   @unique
  expires      DateTime

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts   Account[]
  sessions   Session[]
  userGroups UserGroup[]
}

model VerificationToken {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Currency {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name   String  @unique
  symbol String?
  rate   Float

  wallets Wallet[]
  groups  Group[]
}

model UserGroup {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  removed   Boolean  @default(false)

  user   User   @relation(fields: [userId], references: [id], onDelete: Restrict)
  userId String @db.ObjectId

  group   Group  @relation(fields: [groupId], references: [id], onDelete: Restrict)
  groupId String @db.ObjectId

  transactions   Transaction[] @relation(fields: [transactionIds], references: [id])
  transactionIds String[]      @db.ObjectId

  @@unique([userId, groupId])
}

model Invite {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  token     String   @unique
  expiresAt DateTime
  accepted  Boolean  @default(false)

  group   Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId String @db.ObjectId
}

model Group {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  removed   Boolean  @default(false)

  name String

  defaultCurrency   Currency @relation(fields: [defaultCurrencyId], references: [id], onDelete: Restrict)
  defaultCurrencyId String   @db.ObjectId

  userGroups UserGroup[]
  invites    Invite[]
  wallets    Wallet[]

  transactions   Transaction[] @relation(fields: [transactionIds], references: [id])
  transactionIds String[]      @db.ObjectId
}

model Wallet {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  removed   Boolean  @default(false)

  name  String
  order Int?   @db.Long

  currency   Currency @relation(fields: [currencyId], references: [id], onDelete: Restrict)
  currencyId String   @db.ObjectId

  group   Group  @relation(fields: [groupId], references: [id], onDelete: Restrict)
  groupId String @db.ObjectId

  incomeOperations  Operation[] @relation("WalletOperationIncome")
  expenseOperations Operation[] @relation("WalletOperationExpense")

  transactions   Transaction[] @relation(fields: [transactionIds], references: [id])
  transactionIds String[]      @db.ObjectId
}

model Operation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  removed   Boolean  @default(false)

  name          String
  category      String
  date          DateTime
  incomeAmount  Int      @db.Long
  expenseAmount Int      @db.Long

  incomeWallet   Wallet? @relation(name: "WalletOperationIncome", fields: [incomeWalletId], references: [id], onDelete: Restrict)
  incomeWalletId String? @db.ObjectId

  expenseWallet   Wallet? @relation(name: "WalletOperationExpense", fields: [expenseWalletId], references: [id], onDelete: Restrict)
  expenseWalletId String? @db.ObjectId

  transactions   Transaction[] @relation(fields: [transactionIds], references: [id])
  transactionIds String[]      @db.ObjectId
}
