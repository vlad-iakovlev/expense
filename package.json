{
  "name": "expense",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "generate-currencies": "node --loader ts-node/esm bin/generate-currencies.ts",
    "generate-icons": "node --loader ts-node/esm bin/generate-icons.ts",
    "generate-splashes": "node --loader ts-node/esm bin/generate-splashes.ts",
    "compile": "tsc",
    "lint": "eslint .",
    "lint:ci": "DEBUG=eslint:cli-engine eslint .",
    "prettier": "prettier --write '**/*.(js|ts|tsx|md|json)'",
    "prettier:ci": "prettier --check '**/*.(js|ts|tsx|md|json)'"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.0.0",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.1.3",
    "@prisma/client": "^5.13.0",
    "@serwist/next": "^9.0.2",
    "@types/node": "^20.12.11",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "autoprefixer": "^10.4.19",
    "date-fns": "^3.6.0",
    "default-import": "^1.1.5",
    "focus-trap-react": "^10.2.3",
    "framer-motion": "^11.1.9",
    "immer": "^10.1.1",
    "next": "^14.2.3",
    "next-api-middleware": "^3.0.0",
    "next-auth": "^5.0.0-beta.17",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.3",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "uuid": "^9.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "chalk": "^5.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "eslint-config-prettier": "^9.1.0",
    "fast-xml-parser": "^4.3.6",
    "lefthook": "^1.6.10",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "prisma": "^5.13.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-extraneous-class": "off",
      "@typescript-eslint/no-unnecessary-condition": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ]
    }
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "semi": false,
    "singleQuote": true,
    "importOrder": [
      "^@/",
      "^\\.\\./",
      "^\\./"
    ],
    "importOrderSortSpecifiers": true
  }
}
