{
  "name": "expense",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:prod": "prisma db push && npm run migrations:apply-all && npm run start",
    "migrations": "ts-node --esm -r dotenv/config bin/migrations.ts",
    "migrations:create": "npm run migrations -- --create",
    "migrations:apply-all": "npm run migrations -- --applyAll",
    "update-rates": "ts-node --esm -r dotenv/config bin/update-rates.ts",
    "generate-splash": "pwa-asset-generator public/icon.white.svg public/splash -b '#16a34a' -p '40vh 40vw' -t png -h -x",
    "compile": "tsc",
    "lint": "next lint",
    "lint:ci": "DEBUG=eslint:cli-engine next lint",
    "prettier": "prettier --write '**/*.(js|ts|tsx|md|json)'",
    "prettier:ci": "prettier --check '**/*.(js|ts|tsx|md|json)'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1",
    "@headlessui/react": "^1.7.14",
    "@heroicons/react": "^2.0.17",
    "@next-auth/prisma-adapter": "^1.0.6",
    "@prisma/client": "^4.13.0",
    "@types/node": "^18.16.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.1",
    "autoprefixer": "^10.4.14",
    "chalk": "^5.2.0",
    "clsx": "^1.2.1",
    "date-fns": "^2.29.3",
    "default-import": "^1.1.5",
    "dotenv": "^16.0.3",
    "inter-ui": "^3.19.3",
    "mongodb": "^5.3.0",
    "next": "^13.3.0",
    "next-api-middleware": "^2.0.1",
    "next-auth": "^4.22.1",
    "next-pwa": "^5.6.0",
    "node-fetch": "^3.3.1",
    "postcss": "^8.4.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.5.0",
    "tailwindcss": "^3.3.1",
    "ts-node": "^10.9.1",
    "use-debounce": "^9.0.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "eslint": "^8.38.0",
    "eslint-config-next": "^13.3.1",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.7",
    "prisma": "^4.13.0",
    "pwa-asset-generator": "^6.2.1",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict",
      "prettier"
    ],
    "rules": {
      "@next/next/no-img-element": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "importOrder": [
      "^\\.\\./",
      "^\\./"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "**/*.(js|ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.(md|json)": "prettier --write"
  }
}
