{
  "name": "expense",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "start:prod": "prisma migrate deploy && npm run start",
    "update-currency-names": "ts-node --esm -r dotenv/config bin/update-currency-names.ts",
    "update-currency-rates": "ts-node --esm -r dotenv/config bin/update-currency-rates.ts",
    "generate-icons": "ts-node --esm bin/generate-icons.ts",
    "generate-splash": "ts-node --esm bin/generate-splash.ts",
    "compile": "tsc",
    "lint": "next lint",
    "lint:ci": "DEBUG=eslint:cli-engine next lint",
    "prettier": "prettier --write '**/*.(js|ts|tsx|md|json)'",
    "prettier:ci": "prettier --check '**/*.(js|ts|tsx|md|json)'",
    "prepare": "husky install"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.0.8",
    "@dnd-kit/sortable": "^7.0.2",
    "@dnd-kit/utilities": "^3.2.1",
    "@heroicons/react": "^2.0.18",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^5.1.1",
    "@types/node": "^20.5.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/uuid": "^9.0.2",
    "autoprefixer": "^10.4.15",
    "chalk": "^5.3.0",
    "date-fns": "^2.30.0",
    "default-import": "^1.1.5",
    "dotenv": "^16.3.1",
    "focus-trap-react": "^10.2.1",
    "framer-motion": "^10.16.0",
    "immer": "^10.0.2",
    "next": "^13.4.19",
    "next-api-middleware": "^2.0.1",
    "next-auth": "^4.23.1",
    "next-pwa": "^5.6.0",
    "node-fetch": "^3.3.2",
    "node-html-parser": "^6.1.6",
    "postcss": "^8.4.28",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.32.5",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.3.3",
    "ts-node": "^10.9.1",
    "use-debounce": "^9.0.4",
    "uuid": "^9.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.47.0",
    "eslint-config-next": "^13.4.19",
    "eslint-config-prettier": "^8.10.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "prettier": "^3.0.2",
    "prisma": "^5.1.1",
    "typescript": "^5.1.6"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict",
      "prettier"
    ]
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports"
    ],
    "semi": false,
    "singleQuote": true,
    "importOrder": [
      "^\\.\\./",
      "^\\./"
    ],
    "importOrderSortSpecifiers": true
  },
  "lint-staged": {
    "**/*.(js|ts|tsx)": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.(md|json)": "prettier --write"
  }
}
