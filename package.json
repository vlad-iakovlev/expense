{
  "name": "expense",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "generate-currencies": "node --loader ts-node/esm bin/generate-currencies.ts",
    "generate-icons": "node --loader ts-node/esm bin/generate-icons.ts",
    "generate-splashes": "node --loader ts-node/esm bin/generate-splashes.ts",
    "compile": "tsc",
    "lint": "eslint .",
    "lint:ci": "DEBUG=eslint:cli-engine eslint .",
    "prettier": "prettier --write '**/*.(js|ts|tsx|md|json)'",
    "prettier:ci": "prettier --check '**/*.(js|ts|tsx|md|json)'"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.4",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.22.0",
    "@serwist/next": "^9.0.11",
    "@types/node": "^18.19.68",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.20",
    "date-fns": "^4.1.0",
    "default-import": "^1.1.7",
    "focus-trap-react": "^11.0.0",
    "framer-motion": "^11.13.5",
    "immer": "^10.1.1",
    "next": "^14.2.20",
    "next-api-middleware": "^3.0.0",
    "next-auth": "^5.0.0-beta.25",
    "node-fetch": "^3.3.2",
    "react": "^19.0.0",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.5",
    "tailwindcss": "^3.4.16",
    "uuid": "^11.0.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "chalk": "^5.3.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.20",
    "eslint-config-prettier": "^9.1.0",
    "fast-xml-parser": "^4.5.0",
    "lefthook": "^1.9.0",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "next/core-web-vitals",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:@typescript-eslint/strict",
      "prettier"
    ],
    "rules": {
      "@typescript-eslint/no-extraneous-class": "off",
      "@typescript-eslint/no-unnecessary-condition": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ]
    }
  },
  "prettier": {
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "semi": false,
    "singleQuote": true,
    "importOrder": [
      "^@/",
      "^\\.\\./",
      "^\\./"
    ],
    "importOrderSortSpecifiers": true
  }
}
